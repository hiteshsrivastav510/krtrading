
@{
    Layout = null;
}


<style>
    .Column1Class {
        text-transform: uppercase;
    }
</style>

<div class="contentpanel">

    <div class="clearfix"></div>
    <br />
    @using (Html.BeginForm("_AddBanner", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="col-sm-12">

                <div class="form-group">
                    <label class="control-label col-md">Banner Image<span class="text-red"> * </span></label>
                    <div class="col-md">
                        <input type="file" name="image" id="image" class="form-control" required="required" multiple />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-10 col-md-4">

                        <input type="submit" class="btn btn-primary" value="Submit" style="margin-left: -234px;" />
                    </div>
                </div>
            </div>

        </div>
    }

</div>
